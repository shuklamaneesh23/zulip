<div class="user-status-content-wrapper">
    <div class="user-status-emoji" data-tippy-content="{{t 'Select emoji' }}" data-tippy-placement="top" aria-label="{{t 'Select emoji' }}" id="selected_emoji">
        <div class="status-emoji-wrapper" tabindex="0">
            {{> status_emoji_selector .}}
        </div>
    </div>
    <input type="text" class="user-status modal_text_input" id="user-status-input" placeholder="{{t 'Your status' }}" maxlength="60"/>
    <button type="button" class="clear_search_button" id="clear_status_message_button">
        <i class="zulip-icon zulip-icon-close" aria-hidden="true"></i>
    </button>
</div>
<div class="user-status-options popover-menu">
    <ul role="menu" class="popover-menu-list">
        {{#each default_status_messages_and_emoji_info}}
            <li role="none" class="link-item popover-menu-list-item">
                <div role="menuitem" class="popover-menu-link user-status-value" tabindex="0">
                    {{#if emoji.emoji_alt_code}}
                        <div class="emoji_alt_code">&nbsp;:{{emoji.emoji_name}}:</div>
                    {{else if emoji.url}}
                        <img src="{{emoji.url}}" class="popover-menu-icon emoji status-emoji" alt="{{emoji.emoji_name}}" />
                    {{else}}
                        <div class="popover-menu-icon emoji status-emoji emoji-{{emoji.emoji_code}}"></div>
                    {{/if}}
                    <span class="popover-menu-label user-status-text">{{status_text}}</span>
                </div>
            </li>
        {{/each}}
    </ul>
</div>
